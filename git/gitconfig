[alias]
fa=fetch --all
ch=checkout
co=commit
st=status
rso=remote show origin
unstage=reset --hard --
mt=mergetool -y
gk=!gitk --all&
gl=log --graph --abbrev-commit --pretty=oneline --decorate
cl=clean -dfn
cls=clean -df
ss=stash
ssp=stash pop
ssd=stash drop stash@{0}
ssl=stash list
dry=push --dry-run
rhod=reset --hard origin/develop
ffd=merge --ff-only origin/develop
mg=merge --no-ff
brd=branch -D
lg=log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[diff]
    tool = vimdiff 
[difftool "vimdiff"]
    cmd = vimdiff $LOCAL $REMOTE
[difftool]
    prompt = false
[merge]
    tool = vimdiff 
[mergetool "vimdiff"]
    cmd = vimdiff $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true
[color]
    branch = auto
    diff = auto
    status = auto
[core]
	editor = vi
